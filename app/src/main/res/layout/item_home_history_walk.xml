<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_walkHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_home_history_date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_mini"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_smaller"
                android:text="@string/item_home_history_location"
                android:textSize="@dimen/text_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_walkHistoryDate" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/item_home_history_distance"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_distanceLabel"
                app:layout_constraintEnd_toStartOf="@id/tv_duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/item_home_history_duration"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_stamp"
                app:layout_constraintStart_toEndOf="@id/tv_distance"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />

            <TextView
                android:id="@+id/tv_stamp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/item_home_history_stamp"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_duration"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />

            <TextView
                android:id="@+id/tv_distanceLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/item_home_history_distance_label"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_mini"
                app:layout_constraintBottom_toBottomOf="@+id/tv_durationLabel"
                app:layout_constraintEnd_toStartOf="@id/tv_durationLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_distance" />

            <TextView
                android:id="@+id/tv_durationLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/item_home_history_duration_label"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_mini"
                app:layout_constraintEnd_toStartOf="@id/tv_stampLabel"
                app:layout_constraintStart_toEndOf="@id/tv_distanceLabel"
                app:layout_constraintTop_toBottomOf="@id/tv_duration" />

            <TextView
                android:id="@+id/tv_stampLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/item_home_history_stamp_label"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_mini"
                app:layout_constraintBottom_toBottomOf="@+id/tv_durationLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_durationLabel"
                app:layout_constraintTop_toBottomOf="@id/tv_stamp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>