<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_small">

    <!-- 연도 -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_prev_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_year" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2024"
        android:textSize="@dimen/text_text"
        app:layout_constraintEnd_toStartOf="@id/btn_next_year"
        app:layout_constraintStart_toEndOf="@id/btn_prev_year"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_next_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_year" />

    <!-- 달 -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="1월"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_year"
        app:layout_constraintEnd_toStartOf="@id/btn_month_2"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="2월"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/btn_month_1"
        app:layout_constraintTop_toBottomOf="@id/tv_year"
        app:layout_constraintEnd_toStartOf="@id/btn_month_3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="3월"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/btn_month_2"
        app:layout_constraintTop_toBottomOf="@id/tv_year"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4월"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_month_1"
        app:layout_constraintEnd_toStartOf="@id/btn_month_5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5월"
        app:layout_constraintStart_toEndOf="@id/btn_month_4"
        app:layout_constraintTop_toBottomOf="@id/btn_month_2"
        app:layout_constraintEnd_toStartOf="@id/btn_month_6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6월"
        app:layout_constraintStart_toEndOf="@id/btn_month_5"
        app:layout_constraintTop_toBottomOf="@id/btn_month_3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7월"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_month_4"
        app:layout_constraintEnd_toStartOf="@id/btn_month_8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8월"
        app:layout_constraintStart_toEndOf="@id/btn_month_7"
        app:layout_constraintTop_toBottomOf="@id/btn_month_5"
        app:layout_constraintEnd_toStartOf="@id/btn_month_9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9월"
        app:layout_constraintStart_toEndOf="@id/btn_month_8"
        app:layout_constraintTop_toBottomOf="@id/btn_month_6"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10월"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_month_7"
        app:layout_constraintEnd_toStartOf="@id/btn_month_11" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="11월"
        app:layout_constraintStart_toEndOf="@id/btn_month_10"
        app:layout_constraintTop_toBottomOf="@id/btn_month_8"
        app:layout_constraintEnd_toStartOf="@id/btn_month_12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12월"
        app:layout_constraintStart_toEndOf="@id/btn_month_11"
        app:layout_constraintTop_toBottomOf="@id/btn_month_9"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>





