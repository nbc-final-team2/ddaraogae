<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".app.DdaraogaeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ddaraogae"
        tools:targetApi="31">
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="@string/ddaraogae_client_id" />

        <activity
            android:name=".presentation.ui.home.AddActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.home.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.walk.FinishActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.home.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.mypage.EditPetActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.mypage.DetailPetActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.main.MainActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.login.SignUpActivity"
            android:exported="true"/>
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".presentation.service.LocationService"
            android:foregroundServiceType="location"
            android:exported="false" />

    </application>
</manifest>